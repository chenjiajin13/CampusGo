<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.campusgo.mapper.OrderMapper">

    <resultMap id="OrderMap" type="com.campusgo.domain.Order">
        <id     column="id"            property="id"/>
        <result column="user_id"       property="userId"/>
        <result column="merchant_id"   property="merchantId"/>
        <result column="runner_id"     property="runnerId"/>
        <result column="amount_cents"  property="amountCents"/>
        <result column="status"        property="status"/>
        <result column="created_at"    property="createdAt"/>
        <result column="updated_at"    property="updatedAt"/>
    </resultMap>

    <sql id="cols"><![CDATA[
        id, user_id, merchant_id, runner_id, amount_cents, status, created_at, updated_at
        ]]></sql>

    <insert id="insert" parameterType="com.campusgo.domain.Order"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO orders
        (user_id, merchant_id, runner_id, amount_cents, status, created_at, updated_at)
        VALUES
            (#{userId}, #{merchantId}, #{runnerId}, #{amountCents}, #{status}, NOW(), NOW())
    </insert>

    <select id="findById" resultMap="OrderMap">
        SELECT <include refid="cols"/> FROM orders WHERE id = #{id}
    </select>

    <select id="listAll" resultMap="OrderMap">
        SELECT <include refid="cols"/> FROM orders ORDER BY id DESC
    </select>

    <update id="updateStatus">
        UPDATE orders
        SET status = #{status},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <update id="updateRunner">
        UPDATE orders
        SET runner_id = #{runnerId},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

</mapper>
