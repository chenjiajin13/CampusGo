<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.campusgo.mapper.UserMapper">

    <resultMap id="UserMap" type="com.campusgo.pojo.User">
        <id     column="id"            property="id"/>
        <result column="username"      property="username"/>
        <result column="password_hash" property="passwordHash"/>
        <result column="email"         property="email"/>
        <result column="phone"         property="phone"/>
        <result column="enabled"       property="enabled"/>
    </resultMap>

    <sql id="BaseCols"><![CDATA[
        id, username, password_hash, email, phone, enabled
        ]]></sql>

    <select id="findById" resultMap="UserMap">
        SELECT <include refid="BaseCols"/>
        FROM users
        WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="UserMap">
        SELECT <include refid="BaseCols"/>
        FROM users
        ORDER BY id
    </select>

    <insert id="insert" parameterType="com.campusgo.pojo.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (username, password_hash, email, phone, enabled)
        VALUES (#{username}, #{passwordHash}, #{email}, #{phone}, #{enabled})
    </insert>

    <update id="update" parameterType="com.campusgo.pojo.User">
        UPDATE users
        SET
            username      = #{username},
            password_hash = #{passwordHash},
            email         = #{email},
            phone         = #{phone},
            enabled       = #{enabled}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM users WHERE id = #{id}
    </delete>

    <select id="findByUsername" resultMap="UserMap">
        SELECT <include refid="BaseCols"/>
        FROM users
        WHERE username = #{username}
    </select>

</mapper>
