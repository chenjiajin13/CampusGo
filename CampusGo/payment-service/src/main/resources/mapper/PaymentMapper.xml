<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.campusgo.mapper.PaymentMapper">

    <resultMap id="PaymentMap" type="com.campusgo.domain.Payment">
        <id     column="id"               property="id"/>
        <result column="order_id"         property="orderId"/>
        <result column="user_id"          property="userId"/>
        <result column="merchant_id"      property="merchantId"/>
        <result column="amount_cents"     property="amountCents"/>
        <result column="currency"         property="currency"/>
        <result column="method"           property="method"/>
        <result column="status"           property="status"/>
        <result column="provider_txn_id"  property="providerTxnId"/>
        <result column="extra"            property="extra"
                typeHandler="com.campusgo.mybatis.JsonMapTypeHandler"/>
        <result column="created_at"       property="createdAt"/>
        <result column="updated_at"       property="updatedAt"/>
    </resultMap>

    <sql id="cols"><![CDATA[
        id, order_id, user_id, merchant_id, amount_cents, currency,
    method, status, provider_txn_id, created_at, updated_at
        ]]></sql>

    <insert id="insert" parameterType="com.campusgo.domain.Payment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO payments
        (order_id, user_id, merchant_id, amount_cents, currency, method, status,
         provider_txn_id, extra,created_at, updated_at)
        VALUES
            (#{orderId}, #{userId}, #{merchantId}, #{amountCents}, #{currency},
             #{method}, #{status}, #{providerTxnId},#{extra,typeHandler=com.campusgo.mybatis.JsonMapTypeHandler},
             NOW(), NOW())
    </insert>

    <select id="findById" resultMap="PaymentMap">
        SELECT <include refid="cols"/> FROM payments WHERE id = #{id}
    </select>

    <select id="findByOrderId" resultMap="PaymentMap">
        SELECT <include refid="cols"/> FROM payments WHERE order_id = #{orderId}
    </select>

    <select id="listByUser" resultMap="PaymentMap">
        SELECT <include refid="cols"/> FROM payments
        WHERE user_id = #{userId}
        ORDER BY id DESC
    </select>

    <update id="updateStatus">
        UPDATE payments
        SET status = #{status},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <update id="updateProviderTxnId">
        UPDATE payments
        SET provider_txn_id = #{providerTxnId},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM payments WHERE id = #{id}
    </delete>
</mapper>
